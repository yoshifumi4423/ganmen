<html>
  <head></head>
  <body>
    <h1>プロフィール変更</h1>

    <form action="/profile" method="POST">
      <input type="text" name="email" placeholder="email" value="<%= params.email %>">
      <br><br>
      <input type="password" name="password1" placeholder="新規password" value="">
      <br>
      <input type="password" name="password2" placeholder="確認password" value="">
      <br><br>
      <input type="date" name="birthday" value="<%= params.birthday %>">
      <br><br>
      <select name="gender">
        <option value="man" <%= (params.gender === "man")&&"selected" %>>Man</option>
        <option value="woman" <%= (params.gender === "woman")&&"selected" %>>Woman</option>
      </select>
      <br><br>
      <select name="countryId">
        <% if (countries) {
          countries.forEach((country) => { %>
            <option value="<%= country.id %>" <%= (country.id === Number(params.countryId))&&"selected" %> ><%= country.name %></option>
          <% })
        } %>
      </select>
      <br><br>
      <button type="submit">変更</button>
    </form>

    <% if (errors) {
      errors.forEach((error) => { %>
        <p><%= error %></p>
      <% })
    } %>
  </body>
</html>
