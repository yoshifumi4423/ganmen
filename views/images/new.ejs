<html>
  <head>
    <link rel="stylesheet" href="/reset.css">
    <link rel="stylesheet" href="/common.css">
    <link rel="stylesheet" href="/images/new.css">
  </head>
  <body>
    <div class="container">
      <%- include("../header", {
        form: {
          logoUrl: "../logo_shape.png",
          active: "images-new"
        }
      }) %>

      <main>
        <section>
          <article>
            <h1></h1>
            <form action="/images" method="POST" enctype="multipart/form-data">
              <input type="file" name="faceImage">
              <br>
              <button type="submit">送信</button>
            </form>
            <div class="success">
              <% if (success) {
                success.forEach(message => { %>
                  <p><%= message %></p>
                <% })
              } %>
            </div>
          </article>
        </section>
      </main>

      <%- include("../footer", {}) %>
    </div>
  </body>
</html>
